.page {
  height: 100vh;
  background: #ffffff;
  padding: 10rpx 24rpx;
}
.message-title-layout {
  background-color: #2b85e4;
  height: 40rpx;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx 10rpx;
}
.message-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #2979ff;
  height: 160rpx;
}
.warning-text {
  background-color: #f4f4f5;
  border-radius: 10rpx;
  height: 140rpx;
}
.grid-text {
  font-size: 14px;
  font-weight: bold;
  color: black;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}

